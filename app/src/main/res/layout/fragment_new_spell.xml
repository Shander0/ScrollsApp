<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middle_vert"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/effect_bottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        android:text="Название"
        android:id="@+id/text_name"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:textSize="26sp"
        android:id="@+id/edit_name"
        android:background="@drawable/btn_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        android:text="Описание"
        android:id="@+id/text_desc"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintBottom_toBottomOf="@id/desc_bottom"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:id="@+id/edit_desc"
        android:background="@drawable/btn_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        android:text="Эффект"
        android:id="@+id/text_effect"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_desc"
        app:layout_constraintBottom_toBottomOf="@id/effect_bottom"
        app:layout_constraintStart_toEndOf="@id/text_desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:id="@+id/edit_effect"
        android:background="@drawable/btn_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_effect"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        android:text="Мана"
        android:id="@+id/text_mana"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_effect"
        app:layout_constraintStart_toEndOf="@id/text_effect"
        app:layout_constraintEnd_toEndOf="@id/middle_vert"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:id="@+id/edit_mana"
        android:maxEms="2"
        android:text="0"
        android:maxLines="1"
        android:inputType="number"
        android:background="@drawable/btn_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_effect"
        app:layout_constraintStart_toStartOf="@id/middle_vert"
        android:textSize="26sp"
        android:layout_margin="6dp"
        android:padding="4dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        android:text="Очки"
        android:id="@+id/text_points"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_effect"
        app:layout_constraintStart_toEndOf="@id/text_points"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginVertical="6dp"
        android:padding="4dp"
        android:textSize="22sp"
        android:id="@+id/edit_points"
        android:text="0"
        android:maxEms="2"
        android:maxLines="1"
        android:inputType="number"
        android:background="@drawable/btn_background"/>

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        android:textAlignment="center"
        app:smsp_itemSize="28sp"
        app:smsp_itemColor="#000000"
        app:smsp_itemListColor="#c1b086"
        app:smsp_selectedItemListColor="#734C04"
        app:layout_constraintTop_toBottomOf="@id/text_points"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:text="Сохранить"
        android:textSize="34sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_background"
        android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>